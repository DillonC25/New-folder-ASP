@model List<FancySignup.Models.DirectoryPerson>

<h2>Campus Directory</h2>

<form method="get" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" class="form-control"
           placeholder="Search by name, email, department, or role..." />
</form>

<a href="/Directory/Add" class="btn btn-primary mb-3">Add Person</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Role</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Email</td>
                <td>@p.Phone</td>
                <td>@p.Department</td>
                <td>@p.Role</td>
            </tr>
        }
    </tbody>
</table>
