@model SeacoastUniversity.Models.AdminDashboardVM

<h2>Admin Dashboard</h2>

<div class="dashboard-cards" style="display:flex; gap:20px; margin-bottom:30px;">
    <a href="/Admin/ManageStudents" class="card" 
       style="padding:20px; background:#eef; border-radius:8px; text-decoration:none; color:black;">
        <h3>Total Students</h3>
        <p style="font-size:22px; font-weight:bold;">@Model.TotalStudents</p>
        <span style="color:blue;">Manage Students →</span>
    </a>

    <a href="/Admin/ManageClasses" class="card"
       style="padding:20px; background:#efe; border-radius:8px; text-decoration:none; color:black;">
        <h3>Total Classes</h3>
        <p style="font-size:22px; font-weight:bold;">@Model.TotalClasses</p>
        <span style="color:green;">Manage Classes →</span>
    </a>
</div>

<h3>Newest Students</h3>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Grade Level</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.NewestStudents)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.GradeLevel</td>
                <td>
                    <a class="btn btn-sm btn-primary" 
                       asp-controller="Admin" asp-action="EditStudent" asp-route-id="@student.Id">
                        Edit
                    </a>
                    <a class="btn btn-sm btn-secondary" 
                       asp-controller="Admin" asp-action="ManageStudents">
                        View All →
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<div style="margin-top:20px;">
    <a class="btn btn-large btn-primary" href="/Admin/ManageStudents">Manage Students</a>
    <a class="btn btn-large btn-success" href="/Admin/ManageClasses">Manage Classes</a>
</div>
