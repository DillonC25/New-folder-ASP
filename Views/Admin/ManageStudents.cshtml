@model List<SeacoastUniversity.Models.Student>

<h2>Manage Students</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(true)
    </div>
}

<form asp-action="AddStudent" method="post" class="mb-3">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" name="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Grade Level</label>
        <input type="text" name="GradeLevel" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Student</button>
</form>


<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Grade Level</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.Email</td>
                <td>@s.GradeLevel</td>
                <td>
                    <a class="btn btn-warning" asp-action="EditStudent" asp-route-id="@s.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="DeleteStudent" asp-route-id="@s.Id"
                       onclick="return confirm('Delete this student?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

